echo "🪝 Running pre-push hook."

# Get current unstaged files
unstagedFiles=`git diff --name-only --diff-filter=ACM | grep -E '\.(ts)$' | sed 's| |\\ |g'`
unstagedCount=`echo "$unstagedFiles" | wc -l | sed 's/ //g'`
echo "Current modified files ($unstagedCount):"
echo "$unstagedFiles"

echo "Running pre-push hook"
pnpm pre-commit
# Wait for type alignment with sdk packages before requiring type checks
# pnpm pre-push

# If we have any modified files don't push
if [ -n "$(git status --porcelain)" ]; then
  # Collect all modified files
  updatedUnstagedFiles=`git diff --name-only --diff-filter=ACM | grep -E '\.(ts)$' | sed 's| |\\ |g'`
  updatedUnstagedCount=`echo "$updatedUnstagedFiles" | wc -l | sed 's/ //g'`
  echo "Modified files after linting and prettifying ($updatedUnstagedCount):"
  echo "$updatedUnstagedFiles"

  # Did linter and prettier found some issues?
  newStageFilesCount=$((updatedUnstagedCount-unstagedCount))  
  if [ "$newStageFilesCount" -gt 0 ]; then
    echo "🪝 Some files were not well formed: ($newStageFilesCount)."
    exit 1
  fi
fi

echo "🪝 Done."